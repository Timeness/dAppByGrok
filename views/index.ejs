<%- include('partials/header') %>

<main class="container mx-auto px-4 py-12">
    <section class="search-container">
        <div class="search-glow"></div>
        <form action="/search" method="POST" class="card flex items-center gap-4">
            <input 
                type="text" 
                name="query" 
                placeholder="Search the decentralized web..." 
                class="w-full bg-transparent outline-none text-white placeholder-gray-400"
            >
            <button 
                type="submit" 
                class="px-6 py-2 bg-purple-600 hover:bg-purple-700 rounded-full transition-colors"
            >
                Search
            </button>
        </form>
    </section>

    <% if (results) { %>
        <section class="grid gap-6 mt-12 md:grid-cols-2 lg:grid-cols-3">
            <% results.forEach(result => { %>
                <div class="card">
                    <h2 class="text-xl font-semibold text-purple-300"><%= result.title %></h2>
                    <p class="mt-2 text-gray-300 line-clamp-3"><%= result.description %></p>
                    <a 
                        href="<%= result.url %>" 
                        target="_blank" 
                        class="mt-4 inline-block text-indigo-400 hover:text-indigo-300"
                    >
                        Visit Site â†’
                    </a>
                </div>
            <% }) %>
        </section>
    <% } %>
</main>

<%- include('partials/footer') %>
